<div class="container">
        <div class="row">
          <div class="col-sm-12">
            <h1>Questions</h1>
      
            <% @questions.each do |question| %>
              <div class="caption">
                  <h3><%= link_to question.title, question %></h3>
                      <% if question.content.length > 250 %>
                              <p><%= truncate(question.content, length: 250) %></p>
                              <p> <%= link_to "Read More", question %></p>
                      <% else %>
                          <p><%= question.content %></p>    
                      <% end %>
              
                       
                        <% if user_signed_in? && current_user == question.user %>
                        <%= link_to "Editar", edit_question_path(question) %>
                        <%= link_to "Eliminar", question, method: :delete, data: { confirm: "Â¿Are you sure you want to delete this question?" } %> 
                        <% end %>
      
                                     
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <br>
      <br>
      <br>
      
      <% if user_signed_in? %>   
          <%= link_to "Publish a new Question", new_question_path, class: "btn btn-primary" %> 
      <% end %>   
