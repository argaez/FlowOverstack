<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1><%= @question.title %></h1>
            <p><%= @question.content %></p>
            <% if user_signed_in? && current_user == @question.user %>
                  <%= link_to "Editar", edit_question_path(@question) %>
                  <%= link_to "Eliminar", @question, method: :delete, data: { confirm: "Â¿are you sure you want to delete this?" } %> 
            <% end %>
        </div>
    </div>
    <div>
        <%= render @question.comments.order(created_at: :asc) %>
    </div>
    <%= render "comments/form", commentable: @question %>
    <br>
    <h1>Respuestas</h1>
    <br>
    <div class="ans-list">
        <%= render @question.answers.order(created_at: :asc) %>
    </div>
    
    
    <%= render "answers/form" %>

    
</div>
